.m_prices
  position relative
  padding-top 105px
  background #fff
  overflow hidden
  @media screen and (max-width: 460px)
    padding-top 50px
  &:after
    content ''
    width 960px
    height 1037px
    background url("../images/lead-figure-1.png") no-repeat 0 0
    position absolute
    right -500px
    top 50%
    margin-top -(@height/2)
    @media screen and (max-width: 1500px)
      display none
  &:before
    content ''
    width 844px
    height 855px
    background url("../images/lead-figure-2.png") no-repeat 0 0
    position absolute
    left -350px
    top 50%
    margin-top -(@height/2)
    @media screen and (max-width: 1500px)
      display none
  h2
    black()
    text-transform uppercase
    font-size 65px
    color #333
    margin-bottom 25px
    @media screen and (max-width: 992px)
      font-size 55px
    @media screen and (max-width: 680px)
      font-size 45px
    @media screen and (max-width: 360px)
      font-size 35px
    & + p
      font-size 20px
      color #333333
  .columns
    clearfix()
    padding-top 110px
    margin-bottom 50px
    @media screen and (max-width: 768px)
      margin-bottom 0
      padding-top 50px
    .column
      float left
      width 33.333%
      text-align left
      @media screen and (max-width: 768px)
        width 100%
        margin-bottom 15px
        &:last-child
          margin-bottom 0
  .title
    black()
    color #333
    font-size 24px
    text-align left
    margin-bottom 50px
    padding-right 20px
    @media screen and (max-width: 900px)
      font-size 20px
    @media screen and (max-width: 768px)
      margin-bottom 25px
    @media screen and (max-width: 568px)
      text-align center
      padding-right 0
  .list
    @media screen and (max-width: 768px)
      clearfix()
    .item
      @media screen and (max-width: 768px)
        display inline-block
        vertical-align top
        width 48%
      @media screen and (max-width: 568px)
        width 300px
        margin 5px auto
        display block
      @media screen and (max-width: 380px)
        width 100%
  label
    user-select-none()
    position relative
    z-index 10
    display inline-block
    vertical-align top
    padding-left 50px
    padding-right 20px
    margin-bottom 20px
    cursor pointer
    @media screen and (max-width: 768px)
      margin-bottom 5px
    input[type="checkbox"]
      display none
      &:checked
        & + .cb-icon
          background #fbe44e
          border-color #fbe44e
          &:after
            transform scale(1) rotate(0deg)
          & + .cb-label
            color #333
    .cb-icon
      width 40px
      height 40px
      border 2px solid #eee
      position absolute
      left 0
      top 50%
      margin-top -20px
      background #fff
      &:after
        anim()
        content ''
        position absolute
        left 50%
        top 50%
        width 18px
        height 14px
        background url("../images/cb.png") no-repeat 0 0
        margin-left -(@width/2)
        margin-top -(@height/2)
        transform scale(0) rotate(180deg)
    .cb-label
      display inline-block
      vertical-align middle
      color #777
      font-size 16px
      line-height 1
      padding 11px 0
    &:hover
      .cb-icon
        border-color #fbe44e
