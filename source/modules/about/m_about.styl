.m_about
  padding 210px 0
  @media screen and (max-width: 992px)
    padding 105px 0
  @media screen and (max-width: 460px)
    padding 50px 20px
  p
    width 825px
    margin 0 auto
    text-align left
    border-left 10px solid #fbe44e
    padding-left 45px
    font-size 20px
    line-height 30px
    color #454545
    @media screen and (max-width: 992px)
      width 90%
    @media screen and (max-width: 460px)
      border-left none
      padding-left 0
      font-size 18px
      line-height 28px
      text-align left
      width 100%
    @media screen and (max-width: 330px)
      font-size 16px