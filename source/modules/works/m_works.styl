.m_works
  padding-top 105px
  @media screen and (max-width: 992px)
    padding-top 105px
  @media screen and (max-width: 460px)
    padding-top 50px
  h2
    black()
    text-transform uppercase
    font-size 65px
    color #333
    margin-bottom 50px
    @media screen and (max-width: 992px)
      font-size 55px
      margin-bottom 25px
    @media screen and (max-width: 680px)
      font-size 45px
    @media screen and (max-width: 360px)
      font-size 35px
  .list
    clearfix()
    margin-bottom 30px
  .item
    position relative
    float left
    width 25%
    background-repeat no-repeat
    background-size cover
    background-position 50%
    margin-bottom 4px
    @media screen and (max-width: 768px)
      width 50%
    @media screen and (max-width: 420px)
      width 100%
    &:hover
      @media screen and (min-width: 1025px)
        .details
          border 10px solid #d7c445
          opacity 1
          background rgba(99, 99, 99, .85)
          @media screen and (max-width: 1024px)
            display block
    &.show
      @media screen and (max-width: 1024px)
        .details
          border 10px solid #d7c445
          opacity 1
          background rgba(99, 99, 99, .85)
          @media screen and (max-width: 1024px)
            display block
    .details
      anim()
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      border 75px solid #d7c445
      background rgba(0, 0, 0, 1)
      text-align left
      padding 90px 40px
      opacity 0
      @media screen and (max-width: 1366px)
        padding 40px 20px
      @media screen and (max-width: 1024px)
        transition none
        display none
      @media screen and (max-width: 992px)
        padding 20px
      .title
        black()
        color #fff
        font-size 24px
        cursor default
      .tags
        margin-top 20px
        font-size 18px
        color #fbe557
        cursor default
        @media screen and (max-width: 992px)
          margin-top 0
      a
        anim()
        position absolute
        right 40px
        bottom 40px
        width 65px
        height 100px
        background #fbe44e url("../images/details-arrow.png") no-repeat center
        @media screen and (max-width: 1366px)
          right 20px
          bottom 20px
        @media screen and (max-width: 1024px)
          transition none
        @media screen and (max-width: 992px)
          width 65px
          height 65px
        &:hover
          background-color #fbe44e - 25%
