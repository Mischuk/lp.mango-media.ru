.m_lead
  position relative
  overflow hidden
  height 100%
  background: rgba(253,253,253,1);
  background: -moz-radial-gradient(center, ellipse cover, rgba(253,253,253,1) 0%, rgba(253,253,253,1) 15%, rgba(203,203,203,1) 100%);
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%, rgba(253,253,253,1)), color-stop(15%, rgba(253,253,253,1)), color-stop(100%, rgba(203,203,203,1)));
  background: -webkit-radial-gradient(center, ellipse cover, rgba(253,253,253,1) 0%, rgba(253,253,253,1) 15%, rgba(203,203,203,1) 100%);
  background: -o-radial-gradient(center, ellipse cover, rgba(253,253,253,1) 0%, rgba(253,253,253,1) 15%, rgba(203,203,203,1) 100%);
  background: -ms-radial-gradient(center, ellipse cover, rgba(253,253,253,1) 0%, rgba(253,253,253,1) 15%, rgba(203,203,203,1) 100%);
  background: radial-gradient(ellipse at center, rgba(253,253,253,1) 0%, rgba(253,253,253,1) 15%, rgba(203,203,203,1) 100%);
  @media screen and (max-height: 310px)
    height 320px
  &:after
    content ''
    width 960px
    height 1037px
    background url("../images/lead-figure-1.png") no-repeat 0 0
    position absolute
    right -250px
    top 45%
    margin-top -(@height/2)
    @media screen and (max-width: 1200px)
      right -500px
    @media screen and (max-width: 768px)
      right -680px
  &:before
    content ''
    width 844px
    height 855px
    background url("../images/lead-figure-2.png") no-repeat 0 0
    position absolute
    left -150px
    top 60%
    margin-top -(@height/2)
    @media screen and (max-width: 1200px)
      left -350px
    @media screen and (max-width: 768px)
      left -450px
  .wrapper
    height 100%
  .vertical-outer
    position relative
    z-index 1
    @media screen and (max-width: 380px)
      padding-top 95px
    @media screen and (max-height: 650px)
      padding-top 95px
  header
    position absolute
    z-index 2
    right 0
    top 0
    width 100%
    padding 15px 30px
    @media screen and (max-width: 420px)
      padding 15px
    @media screen and (max-width: 380px)
      padding-bottom 0
    @media screen and (max-height: 500px)
      padding-bottom 0
    .logo
      float left
      @media screen and (max-width: 380px)
        margin-top -15px
        img
          max-height 80px
      @media screen and (max-height: 500px)
        margin-top -15px
        img
          max-height 80px
      @media screen and (max-width: 310px)
        width 100%
        float none
        display block
    .contacts
      float right
      text-align right
      padding-top 40px
      @media screen and (max-width: 380px)
        padding-top 5px
      @media screen and (max-height: 500px)
        padding-top 5px
      @media screen and (max-width: 310px)
        display none
      a
        color #333
      .tel
        a
          black()
          font-size 22px
          @media screen and (max-width: 380px)
            font-size 18px
          @media screen and (max-height: 500px)
            font-size 18px
      .callback
        margin-top 5px
        a
          border-bottom 1px dashed #333
          &:hover
            border-color transparent
  h1
    black()
    font-size 90px
    margin-bottom 40px
    color #333
    @media screen and (max-width: 992px)
      font-size 80px
    @media screen and (max-width: 768px)
      font-size 70px
    @media screen and (max-width: 640px)
      font-size 60px
    @media screen and (max-width: 568px)
      font-size 50px
      margin-bottom 20px
    @media screen and (max-height: 500px)
      font-size 50px
      margin-bottom 20px
    @media screen and (max-height: 380px)
      font-size 40px
    span
      color #f1cc37
      display block
      font-size 48px
      @media screen and (max-width: 992px)
        font-size 38px
      @media screen and (max-width: 640px)
        font-size 28px
      @media screen and (max-height: 500px)
        font-size 28px

  p
    font-size 24px
    color #333
    margin-bottom 40px
    @media screen and (max-width: 992px)
      font-size 20px
    @media screen and (max-width: 768px)
      font-size 18px
    @media screen and (max-width: 640px)
      font-size 16px
    @media screen and (max-width: 568px)
      margin-bottom 20px
    @media screen and (max-height: 500px)
      margin-bottom 20px
    @media screen and (max-height: 380px)
      margin-bottom 0
    br
      @media screen and (max-width: 640px)
        display none
  &.clean
    &:after,
    &:before
      display none
    .vertical-outer
      padding 0
    .lead-logo
      max-height 90%
      max-width 90%





.layout-background
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background rgba(0,0,0,.1)
  z-index 12
  display none
  &.active
    display block
.menu-navs
  nav
    position fixed
    right 0
    top 0
    height 100%
    width 50%
    background #fff
    z-index 15
    display table
    transform translateX(105%)
    box-shadow 0 0 15px rgba(0,0,0,.3)
    anim()
    @media screen and (max-width: 600px)
      width 75%
    @media screen and (max-width: 390px)
      width 100%
    &.open
      transform translateX(0%)
    ul
      display table-cell
      vertical-align middle
      text-align left
      padding-left 120px
      @media screen and (max-width: 992px)
        padding-left 50px
      @media screen and (max-width: 390px)
        padding-left 20px
      li
        position relative
        padding-left 30px
        &:after
          content ''
          width 6px
          height 17px
          background #dadada
          position absolute
          left 0
          top 50%
          margin-top -(@height/2)
        a
          black()
          anim()
          display inline-block
          vertical-align middle
          padding 10px 0
          font-size 24px
          color #777
          &:hover
            color #333